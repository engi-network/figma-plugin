{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2015",
    "jsx": "react-jsx",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/app/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
    },
    "rootDir": "./",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
