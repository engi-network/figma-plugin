{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "rootDir": "./",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
